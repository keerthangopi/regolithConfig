# Force Windows to Open in Particular Workspaces
assign [class="Gnome-terminal"] $ws1
assign [class="Google-chrome"] $ws2
assign [class="jetbrains-studio"] $ws3
assign [class="Android Emulator - Pixel_XL_API_31:5554"] $ws3
assign [class="Code"] $ws4
assign [class="jetbrains-idea-ce"] $ws5
assign [class="jetbrains-idea"] $ws5
assign [class="init.py"] $ws5
assign [class="discord"] $ws6
assign [class="zoom"] $ws8
assign [class="YouTube Music"] $ws10
assign [class="WhatSie"] $ws11

# Auto exec
bindsym $mod+alt+v exec "code" 
bindsym $mod+Shift+Ctrl+s exec /home/keerthan/.screenlayout/laptop_screen.sh
bindsym $mod+Shift+Ctrl+d exec /home/keerthan/.screenlayout/dual_external.sh

set $dp = DP-0.1.1
set $hdmi = DP-0.3

#Assign Workspace to displays
#primary
workspace "$ws4"  output $dp 
workspace "$ws5"  output $dp
workspace "$ws8"  output $dp 
workspace "$ws10" output $dp

#secondary
workspace "$ws1" output $hdmi 
workspace "$ws2" output $hdmi
workspace "$ws3" output $hdmi
workspace "$ws7" output $hdmi 

bindsym $mod+$alt+Ctrl+Left exec /home/keerthan/.screenlayout/screenrtl.sh
bindsym $mod+$alt+Ctrl+Right exec /home/keerthan/.screenlayout/screenltr.sh
bindsym $mod+$alt+Ctrl+E exec /home/keerthan/.screenlayout/screenltr2EDisplay.sh

